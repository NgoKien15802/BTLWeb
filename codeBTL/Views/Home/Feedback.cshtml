
@{
    ViewData["Title"] = "Feedback";
    Layout = "_LayoutQLBDT";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/assets/css/phanhoi.css" />
    <link rel="stylesheet"
          href="./assets/icon/fontawesome-free-5.15.1-web/css/all.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".btn-add-img").click(function () {
                $('input[type="file"]').trigger("click");
            });
            $("#image-input").change(function () {
                var files = $(this)[0].files;
                for (var i = 0; i < files.length; i++) {
                    var file = files[i];
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        var img = $("<img>")
                            .attr("src", e.target.result)
                            .addClass("image-preview");
                        $("#image-preview-container").append(img);
                    };
                    reader.readAsDataURL(file);
                }
            });
            $('.success').click(function () {
                alert('Bạn đã phản hồi thành công');
                $('#feedback').val('');
                $('#image-preview-container').find('.image-preview').remove();
            });
            $('.cancel').click(function () {
                $('#feedback').val('');
                $('#image-preview-container').find('.image-preview').remove();
            });
        });
    </script>
</head>

<body>
    <div class="container">
        <div class="section">
            <h2>Đánh giá sản phẩm và dịch vụ</h2>
            <div class="form">
                <div class="product">
                    <a href="#" class="row">
                        <img src="../assets/images/feedback/a03s.jpg"
                             alt="Ảnh sản phẩm"
                             class="img-product col-3" />
                        <p class="name-product col-9">
                            <strong>Samsung Galaxy A3</strong>
                        </p>
                    </a>
                </div>
                <div class="rating">
                    <span>Chất lượng sản phẩm và dịch vụ</span>
                    <div class="stars">
                        <form action="">
                            <input class="far fa-star star-5"
                                   id="star-5"
                                   type="radio"
                                   name="star" />
                            <label class="far fa-star star-5"
                                   for="star-5"></label>
                            <input class="far fa-star star-4"
                                   id="star-4"
                                   type="radio"
                                   name="star" />
                            <label class="far fa-star star-4"
                                   for="star-4"></label>
                            <input class="far fa-star star-3"
                                   id="star-3"
                                   type="radio"
                                   name="star" />
                            <label class="far fa-star star-3"
                                   for="star-3"></label>
                            <input class="far fa-star star-2"
                                   id="star-2"
                                   type="radio"
                                   name="star" />
                            <label class="far fa-star star-2"
                                   for="star-2"></label>
                            <input class="far fa-star star-1"
                                   id="star-1"
                                   type="radio"
                                   name="star" />
                            <label class="far fa-star star-1"
                                   for="star-1"></label>
                        </form>
                    </div>
                </div>
                <form action="">
                    <textarea name="feedback"
                              id="feedback"
                              cols="30"
                              rows="10"
                              placeholder="Hãy cho chúng tôi biết cảm nhận của bạn"></textarea>
                    <div class="upload-btn-wrapper">
                        <button type="button" class="btn-add-img">
                            Thêm hình ảnh
                        </button>
                        <input type="file" name="myfile" id="image-input" />
                        <div id="image-preview-container"></div>
                    </div>
                    <div class="button-accept">
                        <input type="button"
                               class="cancel btn btn-warning"
                               value="Hủy" style="outline:none"/>
                        <input type="button"
                               class="success btn btn-success"
                               value="Hoàn thành" style="outline:none" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>


