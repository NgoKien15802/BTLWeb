

@using Microsoft.AspNetCore.Http

@{
    HttpContext context = ViewContext.HttpContext;
}
<header>
    <div class="container_cus">
        <div class="top__header">
            <img src="../assets/images/home/top-header.png"
                 class="top__header-img"
                 alt="" />
        </div>
    </div>
    <div class="bottom__header">
        <div class="container_cus bottom__header-container">
            <div>
                <a class="btn btn-primary" disable>
                    <span>Welcome, @context.Session.GetString("Username")</span>
                </a>
            </div>
            <div class="bottom__header-center">
                <img src="../assets/images/home/logo.png" alt="" />
            </div>
            <div class="bottom__header-right">
                <div class=""
                     style="
                                display: flex;
                                align-items: center;
                                column-gap: 10px;
                            ">
                    <div class="input-group-append">
                        <a class="btn btn-primary" type="button" asp-controller="Home" asp-action="HistoryOrder">
                            <span class="bi bi-cart"></span>
                            Lịch sử đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>