@model codeBTL.Models.Dondathang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EditOrders";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Tạo mới đơn đặt hàng</h3>
            <div class="tile-body">
                <form asp-action="EditOrders" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaDh" />
                    <div class="form-group col-md-4">
                        <label asp-for="MaNv" class="control-label"></label>
                        <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv"></select>
                        <span asp-validation-for="MaNv" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="UserId" class="control-label"></label>
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="NgayDat" class="control-label"></label>
                        <input asp-for="NgayDat" class="form-control" />
                        <span asp-validation-for="NgayDat" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="NgayGiao" class="control-label"></label>
                        <input asp-for="NgayGiao" class="form-control" />
                        <span asp-validation-for="NgayGiao" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="TongTien" class="control-label"></label>
                        <input asp-for="TongTien" class="form-control" />
                        <span asp-validation-for="TongTien" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="TongThanhToan" class="control-label"></label>
                        <input asp-for="TongThanhToan" class="form-control" />
                        <span asp-validation-for="TongThanhToan" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


