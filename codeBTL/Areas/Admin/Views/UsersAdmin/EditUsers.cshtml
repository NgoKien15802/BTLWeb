@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model codeBTL.Models.Userinfo

@{
    ViewData["Title"] = "EditUsers";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Sửa khách hàng</h3>
            <div class="tile-body">
                <form asp-action="EditUsers" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group col-md-4">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Sdtuser" class="control-label"></label>
                        <input asp-for="Sdtuser" class="form-control" />
                        <span asp-validation-for="Sdtuser" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DiaChiUser" class="control-label"></label>
                        <input asp-for="DiaChiUser" class="form-control" />
                        <span asp-validation-for="DiaChiUser" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Role" class="control-label"></label>
                        <input asp-for="Role" class="form-control" />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


